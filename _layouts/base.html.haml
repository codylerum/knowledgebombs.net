!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    -if page.title
      %title #{page.title}
    -else
      %title Knowledge Bombs
    -if page.description != nil
      %meta{:name=>"description", :content=> page.description}
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    :css
      body {
        padding-top: 60px;
      }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/bootstrap.min.css" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/bootstrap-responsive.min.css" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/theme.css" }
    %link{ :rel=>'alternate',"type" => "application/atom+xml", "title" => "Blog Feed", "href" => "#{site.base_url}/blog/feed.atom"}
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'//html5shim.googlecode.com/svn/trunk/html5.js' }
    %script{ :type=>'text/javascript', :src=>'//cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js' }
    %script{ :type=>'text/javascript', :src=>"#{site.base_url}/javascripts/bootstrap.min.js" }

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{ :href=>"#{site.base_url}" } Knowledge Bombs
          %ul.nav.pull-right
            %li
              %a{:href=>"#{site.base_url}/blog/feed.atom", :style=> "padding-top:5px;padding-bottom:5px;"}
                %img{:src=>"#{site.base_url}/img/rss_32.png", :alt=>"Knowledge Bombs RSS Feed"}
    .container
      .row-fluid
        .span9
          ~ content
        .span3
          .row-fluid
            .span12
              .label.text-center
                About Knowledge Bombs
              .well.well-small
                Random bits of knowledge that we don't want to forget and that might help you!
            .row-fluid
              .span12
                .label.text-center
                  Cody Lerum
                .well.well-small
                  .row-fluid
                    .span4
                      %a{:href=>'http://en.gravatar.com/codylerum'}
                        %img.floating-page{:src=> 'http://www.gravatar.com/avatar/' + Digest::MD5.hexdigest( 'cody.lerum@gmail.com' ), :alt => 'Cody Lerum'}
                    .span8
                      <div style="padding-top:3px">
                      <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
                      <script type="IN/MemberProfile" data-id="http://www.linkedin.com/in/codylerum" data-format="click" data-text="Cody Lerum" data-related="false"></script>
                      </div>
                      <div style="padding-top:3px">
                      <a href="//plus.google.com/102516208312961178993?prsrc=3" rel="author" style="text-decoration:none;"><img src="//ssl.gstatic.com/images/icons/gplus-32.png" alt="Google+" style="border:0;width:20px;height:20px;"/></a>
                      </div>
                      <div style="padding-top:3px">
                      <a href="https://twitter.com/codylerum" class="twitter-follow-button" data-show-count="false" data-show-screen-name="false">Follow @codylerum</a>
                      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                      </div>
          .row-fluid
            .span12
              .label.text-center
                Ken Mix
              .well.well-small
                .row-fluid
                  .span4
                    %a{:href=>'http://en.gravatar.com/kmix'}
                      %img.floating-page{:src=> 'http://www.gravatar.com/avatar/' + Digest::MD5.hexdigest( 'ken.mix@gmail.com' ), :alt => 'Ken Mix'}
                  .span8
                    <div style="padding-top:3px">
                    <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
                    <script type="IN/MemberProfile" data-id="http://www.linkedin.com/in/kenmix" data-format="click" data-text="Ken Mix" data-related="false"></script>
                    </div>
                    <div style="padding-top:3px">
                    <a href="http://plus.google.com/101925478681357288309?prsrc=3" rel="author" style="text-decoration:none;"><img src="//ssl.gstatic.com/images/icons/gplus-32.png" alt="Google+" style="border:0;width:20px;height:20px;"/></a>
                    </div>
          .row-fluid
            .span12
              .label.text-center
                Blog Archive
              .well.well-small.blog-archive
                %ul#years
                  -site.blog_map.each do |year, months|
                    %li.year{:id=>"year_#{year}"}
                      %a{:data => {:toggle => "collapse", :target => "#year_#{year} > ul.year", :parent=>"#years"}, :href => "##{year}"}
                        = year
                      %ul.year.collapse
                        -months.each do |month, posts|
                          %li.month{:id=>"month_#{month}_#{year}"}
                            %strong
                              %span.month= Date::MONTHNAMES[month]
                              %span.count= "(#{posts.size})"
                            %ul.month
                              -posts.each do |post|
                                %li.ellipsis-overflow
                                  %a{:href => site.base_url + post.url, :title=> post.title}= post.title
          .row-fluid
            .span12
              .label.text-center
                Tags
              .well.well-small
                .row-fluid
                  .tags
                    = site.blogs_tag_cloud

      %hr
      %footer
        %p
          &copy; Knowledge Bombs #{Date.today.year} baked with
          %a{:href => "http://www.awestruct.org", :target=> "_blank"} Awestruct
    - if site.google_analytics
      = google_analytics_async